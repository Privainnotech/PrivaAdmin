					<main class="content">
						<div class="container-fluid p-0">
							<div class="row">
								<div class="col-md-6">

								</div>
								<div class="col-md-6">
									<form action="" method="post">
										<div class="input_fields_wrap">

											<button class="add_field_button">Add More Fields</button>
											<input type="text" class="form-control mb-3" name="mytext[]" placeholder="Enter Price">
										</div>
										<button type="submit" class="btn btn-primary">Submit</button>
									</form>
								</div>
							</div>
							<div class="row">
								<div class="col">
									<div class="card flex-fill">
										<div class="card-header title">
											<h1>Detail</h1>
											<button id="saveDetail" class="btn btn-success">Save</button>
										</div>
										<div class="card-body w-100">
											<div id="editor" class="center"></div>
										</div>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col">
									<table id="tbTest" class="table table-sm text-nowrap text-center table-hover my-0 w-100">
										<thead class="thead-dark">
											<tr>
												<th>Item</th>
												<th>Item Name</th>
												<th>Unit Price</th>
												<th>Qty</th>
												<th>Action</th>
											</tr>
										</thead>
										<tbody id="showTable">
											<tr>
												<td colspan="5">please select a revised...</td>
											</tr>
										</tbody>
									</table>
								</div>
							</div>
					</main>

			</div>
	</div>

	<div class="row ">
		<div class="col">
			<div class="row mb-1">
				<div class="col">
					<div class="input-group input-group-sm">
						<input type="text" class="form-control payment m-0" value="">
						<input type="number" class="form-control payment m-0" value="">
						<span class="input-group-text bg-white m-0 h-100">%</span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<div class="input-group input-group-sm">
						<input type="date" class="form-control payment" value="">
						<button class="btn btn-sm btn-primary payment btn-edit-date-payment p-1">Edit</button>
					</div>
				</div>
			</div>
		</div>
		<div class="col-auto p-1">
			<div class="d-flex justify-content-center align-items-center">
				<button class="btn btn-primary payment btn-del-payment"><i class="far fa-check-square"></i></button>
			</div>
			width
		</div>
	</div>
	

