      <div class="main">
        <%- include('./partials/navbar'); %>

        <main class="content">
          <div class="container-fluid p-0">
            <div class="row">
              <div class="col-12 d-flex">
                <div class="card flex-fill">
                  <div class="card-header title">
                    <div class="d-flex align-items-center">
                      <h1 id="cardHeader">Pricing</h1>
                      <div class="ml-2 btn-group dropright" role="group">
                        <button
                          type="button"
                          class="btn btn-sm btn-dark"
                          data-toggle="dropdown"
                          aria-expanded="false"
                        >
                          Category
                        </button>
                        <div
                          id="categoryDropdown"
                          class="dropdown-menu p-2"
                          style="width: 15rem"
                        >
                          <div
                            class="d-flex justify-content-between align-items-center"
                          >
                            <input
                              id="inpCategory"
                              type="text"
                              class="form-control"
                              placeholder="Category"
                            />
                            <button
                              id="addCategory"
                              type="button"
                              class="ml-1 p-2 btn btn-success"
                            >
                              <i class="fa fa-plus"></i>
                            </button>
                          </div>
                          <ul id="categoryList" class="list-group mt-2"></ul>
                        </div>
                      </div>
                    </div>
                    <button
                      type="button"
                      class="btn btn-success"
                      id="addPricing"
                    >
                      ADD
                    </button>
                  </div>
                  <table
                    id="tablePricing"
                    class="table table-sm text-center table-hover my-0"
                    style="width: 100%"
                  >
                    <thead class="thead-dark">
                      <tr>
                        <!-- <th>Index</th> -->
                        <th>Item</th>
                        <th>Cost</th>
                        <th>Selling Price</th>
                        <th>Category</th>
                        <th>Vendor</th>
                        <th style="width: 8%">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td colspan="5">No data available in table</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
              <div class="col-12 d-flex">
                <div class="card flex-fill">
                  <div class="card-header title">
                    <h1 id="cardHeader">Vendor</h1>
                    <button
                      type="button"
                      class="btn btn-success"
                      id="addVendor"
                    >
                      ADD
                    </button>
                  </div>

                  <table
                    id="tableVendor"
                    class="table table-sm text-center table-hover my-0"
                    style="width: 100%"
                  >
                    <thead class="thead-dark">
                      <tr>
                        <!-- <th>Index</th> -->
                        <th>Vendor</th>
                        <th>Address</th>
                        <th style="width: 10%">Action</th>
                        <!-- <th style="display: none"></th> -->
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td colspan="2">No data available in table</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </main>
