    <div class="wrapper">
      <%- include('./partials/sidebar'); %>

      <!-- form Pricing -->
      <div class="modal fade" role="dialog" tabindex="-1" id="modalPricing">
        <div
          class="modal-dialog modal-lg modal-dialog-centered"
          role="document"
        >
          <div class="modal-content">
            <form id="formPricing">
              <div class="modal-header">
                <h4 class="modal-title">Pricing Detail</h4>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close"
                >
                  <span aria-hidden="true">×</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="form-row my-2">
                  <div
                    class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center"
                  >
                    <span>
                      <p class="red">*</p>
                      Name:&nbsp;
                    </span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <input
                      class="form-control"
                      type="text"
                      id="inpPricingName"
                      style="width: 100%"
                      required
                    />
                  </div>
                </div>
                <div class="form-row my-2">
                  <div
                    class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center"
                  >
                    <span>
                      <p class="red">*</p>
                      Cost:&nbsp;
                    </span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <input
                      class="form-control"
                      type="number"
                      id="inpPricingCost"
                      style="width: 100%"
                      required
                    />
                  </div>
                </div>

                <div class="form-row my-2">
                  <div
                    class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center"
                  >
                    <span>Selling Price:&nbsp;</span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <input
                      class="form-control"
                      type="number"
                      id="inpPricingPrice"
                      style="width: 100%"
                    />
                  </div>
                </div>
                <div class="form-row my-2">
                  <div
                    class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center"
                  >
                    <span>Url:&nbsp;</span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <input
                      class="form-control"
                      type="text"
                      id="inpPricingUrl"
                      style="width: 100%"
                    />
                  </div>
                </div>
                <div class="form-row mb-2 mt-4">
                  <div
                    class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center"
                  >
                    <span>
                      <p class="red">*</p>
                      Category:&nbsp;
                    </span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <select class="form-select" id="inpPricingCategory">
                      <option value="" selected>New Category</option>
                    </select>
                  </div>
                </div>
                <div id="categoryGroup">
                  <div class="form-row my-2">
                    <div
                      class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center"
                    >
                      <span>
                        <p class="red">*</p>
                        New Category:&nbsp;
                      </span>
                    </div>
                    <div class="col-xl-8 d-xl-flex align-items-xl-center">
                      <input class="form-control" id="inpPricingCategoryName" />
                    </div>
                  </div>
                </div>
                <div class="form-row mb-2 mt-4">
                  <div
                    class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center"
                  >
                    <span>
                      <p class="red">*</p>
                      Vendor:&nbsp;
                    </span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <select class="form-select" id="inpPricingVendor">
                      <option value="" selected>New Vendor</option>
                    </select>
                  </div>
                </div>
                <div id="vendorGroup" class="">
                  <div class="form-row my-2">
                    <div
                      class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center"
                    >
                      <span>
                        <p class="red">*</p>
                        New Vendor:&nbsp;
                      </span>
                    </div>
                    <div class="col-xl-8 d-xl-flex align-items-xl-center">
                      <input class="form-control" id="inpPricingVendorName" />
                    </div>
                  </div>
                  <div class="form-row my-2">
                    <div
                      class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center"
                    >
                      <span> Vendor Address:&nbsp; </span>
                    </div>
                    <div class="col-xl-8 d-xl-flex align-items-xl-center">
                      <input
                        class="form-control"
                        id="inpPricingVendorAddress"
                      />
                    </div>
                  </div>
                  <div class="form-row my-2">
                    <div
                      class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center"
                    >
                      <span> Vendor Url:&nbsp; </span>
                    </div>
                    <div class="col-xl-8 d-xl-flex align-items-xl-center">
                      <input class="form-control" id="inpPricingVendorUrl" />
                    </div>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button class="btn btn-primary" id="savePricing" type="button">
                  Save
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- form Vendor -->
      <div class="modal fade" role="dialog" tabindex="-1" id="modalVendor">
        <div
          class="modal-dialog modal-lg modal-dialog-centered"
          role="document"
        >
          <div class="modal-content">
            <form id="formVendor">
              <div class="modal-header">
                <h4 class="modal-title">Vendor Detail</h4>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close"
                >
                  <span aria-hidden="true">×</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="form-row my-2">
                  <div
                    class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center"
                  >
                    <span>
                      <p class="red">*</p>
                      Name:&nbsp;
                    </span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <input
                      class="form-control"
                      type="text"
                      id="inpVendorName"
                      style="width: 100%"
                      required
                    />
                  </div>
                </div>
                <div class="form-row my-2">
                  <div
                    class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center"
                  >
                    <span> Address:&nbsp; </span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <input
                      class="form-control"
                      type="text"
                      id="inpVendorAddress"
                      style="width: 100%"
                      required
                    />
                  </div>
                </div>
                <div class="form-row my-2">
                  <div
                    class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center"
                  >
                    <span>Url:&nbsp;</span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <input
                      class="form-control"
                      type="text"
                      id="inpVendorUrl"
                      style="width: 100%"
                    />
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button class="btn btn-primary" id="saveVendor" type="button">
                  Save
                </button>
              </div>
            </form>
          </div>
        </div>
